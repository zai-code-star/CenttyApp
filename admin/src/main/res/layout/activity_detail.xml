<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beground"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <!-- Button untuk kembali -->
            <Button
                android:id="@+id/back_button"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/back"
                android:text="" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/back"
            android:layout_marginTop="0dp">

            <!-- ViewPager2 untuk menampilkan gambar -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <!-- ScrollView untuk konten informasi -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:layout_marginTop="15dp">

            <!-- LinearLayout untuk menampung informasi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/beground"
                android:orientation="vertical">

                <!-- TextView untuk menampilkan nama barang -->
                <TextView
                    android:id="@+id/item_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/huruf"
                    tools:text="Nama Barang" />

                <!-- TextView untuk menampilkan tipe barang -->
                <TextView
                    android:id="@+id/tipeproperti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Type"
                    android:textSize="16sp"
                    android:textColor="@color/abutulisan"
                    android:layout_marginTop="4dp"
                    tools:text="TypeProperti" />

                <!-- TextView untuk menampilkan harga barang -->
                <TextView
                    android:id="@+id/item_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Price"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:layout_marginTop="4dp"
                    tools:text="Rp 10.000" />

                <!-- TextView untuk menampilkan alamat -->
                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Address"
                    android:textSize="16sp"
                    android:textColor="@color/abutulisan"
                    android:layout_marginTop="4dp"
                    tools:text="Alamat" />

                <!-- TextView untuk menampilkan kecamatan -->
                <TextView
                    android:id="@+id/kecamatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecamatan"
                    android:textSize="16sp"
                    android:textColor="@color/abutulisan"
                    android:layout_marginTop="4dp"
                    tools:text="Kecamatan" />


                <!-- TextView untuk menampilkan spesifikasi -->
                <TextView
                    android:id="@+id/spesifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:text="spesifikasi"
                    android:textSize="16sp"
                    android:textColor="@color/abutulisan"
                    android:layout_marginTop="4dp"
                    tools:text="spesifikasi" />

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp">

            <!-- Button Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Button untuk Update Item -->
                    <Button
                        android:id="@+id/update"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Update Item"
                        android:layout_margin="8dp" />

                    <!-- Button untuk Delete Item -->
                    <Button
                        android:id="@+id/delete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delete Item"
                        android:layout_margin="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>