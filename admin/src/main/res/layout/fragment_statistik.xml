                        android:orientation="vertical">

                        <!-- Your CardView content here -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hotel"
                            android:textColor="@color/black"
                            android:textSize="18sp"
