<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Multiple ImageView untuk menampilkan gambar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewListing"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/upload" />

            <!-- Tambahkan ImageView lainnya sesuai kebutuhan -->

        </LinearLayout>

        <!-- TextView untuk menampilkan nama -->
        <TextView
            android:id="@+id/namaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Nama:"
            android:textColor="@color/huruf"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- LinearLayout untuk menampilkan tipeProperti -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tipePropertiLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Properti: "
                android:textColor="@color/abutulisan"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tipePropertiTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="12sp" />

        </LinearLayout>

        <!-- LinearLayout untuk menampilkan harga -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/hargaLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga: "
                android:textColor="@color/abutulisan"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hargaTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text=""
                android:textSize="12sp" />

        </LinearLayout>

        <!-- LinearLayout untuk menampilkan alamat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/alamatLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat: "
                android:textColor="@color/abutulisan"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/alamatTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="12sp" />

        </LinearLayout>

        <!-- LinearLayout untuk menampilkan kecamatan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/kecamatanLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kecamatan: "
                android:textColor="@color/abutulisan"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/kecamatanTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="12sp" />

        </LinearLayout>
        <!-- LinearLayout untuk menampilkan tipe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:gravity="end">

            <!-- View untuk melihat total item klik -->
            <TextView
                android:id="@+id/totalClicksTextView"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/abutulisan"
                android:gravity="center"
                android:text="Views: 0"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tipeTextView"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_rounded_corner"
                android:gravity="center"
                android:text="Tipe"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
