<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="276dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">


        <!-- Multiple ImageView untuk menampilkan gambar -->
        <ImageView
            android:id="@+id/imageViewListing"
            android:layout_width="256dp"
            android:layout_height="87dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/upload" />

        <!-- TextView untuk menampilkan nama -->
        <TextView
            android:id="@+id/namaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama:"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- LinearLayout untuk menampilkan tipeProperti -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tipePropertiLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Properti: "
                android:textColor="@color/abutulisan"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tipePropertiTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text=""
                android:textSize="10sp" />

        </LinearLayout>

        <!-- LinearLayout untuk menampilkan harga -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hargaLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga: "
                android:textColor="@color/abutulisan"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/hargaTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:text=""
                android:textSize="10sp" />

        </LinearLayout>

        <!-- LinearLayout untuk menampilkan alamat -->

        <!-- LinearLayout untuk menampilkan kecamatan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kecamatanLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kecamatan: "
                android:textColor="@color/abutulisan"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/kecamatanTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text=""
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tipeTextView"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_rounded_corner"
                android:gravity="center"
                android:text="Tipe"
                android:textColor="@color/white"
                android:textSize="5sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
